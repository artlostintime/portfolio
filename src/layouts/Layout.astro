---
import Navigation from '../components/Navigation.astro';
import Stars from '../components/Stars.astro';
import EnhancedEffects from '../components/EnhancedEffects.astro';
import '../styles/global.css';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title}</title>
  <meta name="description" content="Vishu - Psychology Researcher & Developer">
  <meta name="theme-color" content="#000000">
  <link rel="icon" type="image/svg+xml" href="/clover.svg">
</head>
<body>
  <Stars />
  <EnhancedEffects />
  <Navigation />
  
  <main id="main-content" style="margin-top: 80px;">
    <slot />
  </main>
</body>
</html>
